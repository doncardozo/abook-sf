{% extends "AbookBundle:Layout:layout.html.twig" %}

{% block title %}Show Contact{% endblock %}

{% block body -%}

<section class="col col-lg-8">
    <fieldset>
        <legend>Contacts</legend>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ entity.firstName }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ entity.lastName }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{% if entity.active == 1 %} Yes {% else %} No {% endif %}</td>
                </tr>
            </tbody>
        </table>

    </fieldset>

    <div class="btn btn-group">
        <div>
            <a class="btn btn-primary" href="{{ path('contacts_edit', { 'id': entity.id }) }}">
                Edit
            </a>            
        </div>
        <div>
            {{ form_start(delete_form) }}
                {{ form_row(delete_form.submit, { 'attr':{'class':'btn btn-primary'} }) }}
            {{ form_end(delete_form) }}
        </div>
    </div>
    <style type="text/css">    
        .btn-group div { display: inline-block }
    </style>
    
</section>

{% endblock %}
